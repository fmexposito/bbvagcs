#button li a:hover {  
	background-color: #2586d7;  
}  
#button li a:active {  
	background-color: #2586d7;  
}
.sites-adminfooter {
	display:none !important;
}

#button li a#past-travels:hover {  
	background-color: #FEBB60;  
} 

#button li a#Future-Travels:hover {  
	background-color: #7ABD5E;  
